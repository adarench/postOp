rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Voice recordings and patient photos - staff access only
    match /voice-recordings/{userId}/{fileName} {
      allow read, write: if request.auth != null &&
        request.auth.token.role in ['staff', 'manager', 'surgeon'];
    }

    match /patient-photos/{patientId}/{fileName} {
      allow read, write: if request.auth != null &&
        request.auth.token.role in ['staff', 'manager', 'surgeon'];
    }

    // Export files - temporary access for download
    match /exports/{userId}/{fileName} {
      allow read: if request.auth != null &&
        request.auth.uid == userId &&
        request.auth.token.role in ['staff', 'manager', 'surgeon'];
    }
  }
}